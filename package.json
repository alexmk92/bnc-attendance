{
  "name": "bnc-attendance",
  "version": "1.0.0",
  "bin": {
    "bnc-attendance": "./dist/cli/index.js"
  },
  "scripts": {
    "cli": "node ./dist/cli/index.js",
    "build": "rm -rf dist && tsc && chmod 755 ./dist/cli/index.js",
    "record": "yarn build && ./dist/index.js record",
    "rebuild": "yarn build && yarn start",
    "start": "yarn dist/server/index.js",
    "dev": "npx tsc-watch --onSuccess \"yarn rebuild\" | npx pino-pretty"
  },
  "license": "MIT",
  "dependencies": {
    "chalk": "^4.1.2",
    "cockroachdb": "^1.0.3",
    "commander": "^8.2.0",
    "conf": "^10.0.3",
    "dotenv": "^10.0.0",
    "express": "^4.17.1",
    "express-pino-logger": "^7.0.0",
    "googleapis": "^88.2.0",
    "knex": "^0.95.11",
    "pg": "^8.7.3",
    "pino": "^7.8.0",
    "tail-file": "^1.4.14"
  },
  "devDependencies": {
    "@types/express": "^4.17.13",
    "@types/express-pino-logger": "^4.0.3",
    "@types/knex": "^0.16.1",
    "@types/lodash": "^4.14.175",
    "pino-pretty": "^7.5.1",
    "tsc-watch": "^4.6.0",
    "typescript": "^4.5.5"
  }
}
